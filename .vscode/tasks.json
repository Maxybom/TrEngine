{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build TrEngine",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            // --- Windows ---
            "windows": {
                "command": ".\\Build.bat",
                "args": [
                    "TrEngine.sln",
                    "/p:Configuration=Debug",
                    "/p:Platform=x64",
                    "/t:Build"
                ],
                "problemMatcher": "$msCompile"
            },
            // --- Linux ---
            "linux": {
                "command": "./Build.sh",
                "args": [],
                "problemMatcher": "$gcc"
            }
        }
    ]
}